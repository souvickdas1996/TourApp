    .carousel {
  width: 100%;
  height: 400px;
  overflow: hidden;
  position: relative;
}

.carousel-inner {
  width: 300%;
  height: 100%;
  position: relative;
  left: 0;
  transition: left 0.6s ease;
}

.carousel-item {
  width: 33.3333%;
  height: 100%;
  float: left;
  position: relative;
}

.carousel-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

@media (max-width: 768px) {
  .carousel {
    height: auto;
  }

  .carousel-inner {
    width: 400%;
    height: auto;
  }

  .carousel-item {
    width: 25%;
  }
}

.carousel-inner:hover {
  cursor: grab;
}

.carousel-inner:active {
  cursor: grabbing;
}

.carousel-inner:active .carousel-item {
  cursor: grabbing;
}

